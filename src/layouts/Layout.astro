---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
}

const {
  title,
  description = 'Echo Stories - Independent film production company focused on creative, author-driven projects',
  image = '/profile.jpg',
  type = 'website'
} = Astro.props;

const base = import.meta.env.BASE_URL;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const imageURL = new URL(image, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageURL} />
    <meta property="og:site_name" content="Echo Stories" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageURL} />

    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta name="author" content="Echo Stories" />

    <link rel="icon" type="image/x-icon" href={`${base}/favicon.ico`.replace(/\/+/g, '/')} />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-0HTHGXJWJN"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-0HTHGXJWJN');
    </script>

    <!-- JSON-LD Structured Data for Organization -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Echo Stories",
        "alternateName": "Echo Stories Film Production",
        "url": "https://echo-stories.cz",
        "logo": "https://echo-stories.cz/profile.jpg",
        "description": "Independent film production company based in Prague, Czech Republic, focused on creative, author-driven fiction and documentary films from Europe, Central Asia, and the Middle East.",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Prague",
          "addressRegion": "Prague",
          "addressCountry": "CZ"
        },
        "sameAs": [],
        "foundingDate": "2020",
        "founders": [
          {
            "@type": "Person",
            "name": "Iuliia Mamaeva"
          }
        ],
        "areaServed": ["Europe", "Central Asia", "Middle East"],
        "knowsAbout": ["Film Production", "Documentary Films", "Fiction Films", "Independent Cinema"]
      }
    </script>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
