---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import Layout from '@/layouts/Layout.astro';
import fs from 'fs';
import path from 'path';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  // Filter out locked projects - they should not have their own pages
  return projects
    .filter(project => !project.data.locked)
    .map(project => {
      const slug = project.id.replace('/index', '');
      return {
        params: { slug },
        props: { project, slug },
      };
    });
}

const { project, slug } = Astro.props;
const base = import.meta.env.BASE_URL;

// Read synopsis files from paths defined in frontmatter
let synopsisEn = '';
let synopsisCz = '';

if (project.data.synopsis) {
  const projectDir = path.join(process.cwd(), 'src/content/projects', slug);
  
  if (project.data.synopsis.en) {
    const synopsisEnPath = path.join(projectDir, project.data.synopsis.en);
    if (fs.existsSync(synopsisEnPath)) {
      synopsisEn = fs.readFileSync(synopsisEnPath, 'utf-8');
    }
  }
  
  if (project.data.synopsis.cz) {
    const synopsisCzPath = path.join(projectDir, project.data.synopsis.cz);
    if (fs.existsSync(synopsisCzPath)) {
      synopsisCz = fs.readFileSync(synopsisCzPath, 'utf-8');
    }
  }
}

// Load still images dynamically
const stills = project.data.stills ? await Promise.all(
  project.data.stills.map(async (still) => {
    try {
      const images = import.meta.glob<{ default: ImageMetadata }>('/src/content/projects/**/*.{jpg,jpeg,png,svg}', { eager: true });
      const imagePath = `/src/content/projects/${slug}/${still.src.replace('./', '')}`;
      const imageModule = images[imagePath];
      return {
        image: imageModule?.default,
        alt: still.alt
      };
    } catch (e) {
      return null;
    }
  })
).then(results => results.filter((r): r is { image: ImageMetadata; alt: string } => r !== null && r.image !== undefined)) : [];

// Get all projects for navigation, excluding locked ones
const allProjects = await getCollection('projects');
const sortedProjects = allProjects
  .filter(p => !p.data.locked) // Filter out locked projects
  .sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

const currentIndex = sortedProjects.findIndex(f => f.id === project.id);

// Find previous non-locked project (wrap around to end if at beginning)
let prevProject = null;
if (sortedProjects.length > 1) {
  const prevIndex = currentIndex > 0 ? currentIndex - 1 : sortedProjects.length - 1;
  prevProject = sortedProjects[prevIndex];
}

// Find next non-locked project (wrap around to beginning if at end)
let nextProject = null;
if (sortedProjects.length > 1) {
  const nextIndex = currentIndex < sortedProjects.length - 1 ? currentIndex + 1 : 0;
  nextProject = sortedProjects[nextIndex];
}

// Create structured data for Movie
const movieStructuredData = {
  "@context": "https://schema.org",
  "@type": "Movie",
  "name": project.data.title.en,
  "alternateName": project.data.title.cz || undefined,
  "description": project.data.logline?.en || synopsisEn.substring(0, 200),
  "dateCreated": project.data.year.toString(),
  "genre": project.data.category.join(', '),
  "duration": project.data.duration || undefined,
  "inLanguage": "en",
  "productionCompany": {
    "@type": "Organization",
    "name": "Echo Stories"
  },
  "countryOfOrigin": {
    "@type": "Country",
    "name": "Czech Republic"
  }
};

const pageDescription = project.data.logline?.en ||
  `${project.data.title.en} - ${project.data.category.join(', ')} film by Echo Stories. ${synopsisEn.substring(0, 150)}...`;
---

<Layout
  title={`${project.data.title.en} - Echo Stories Film Project`}
  description={pageDescription}
  type="article"
>
  <script type="application/ld+json" set:html={JSON.stringify(movieStructuredData)} />

  <article class="mx-auto max-w-7xl px-4 py-12">
    <!-- Header -->
    <header class="mb-8">
      <h1 class="mb-2 font-serif text-4xl md:text-5xl">
        {project.data.title.en}
        {project.data.title.cz && <span class="italic"> \ {project.data.title.cz}</span>}
      </h1>
      <div class="flex flex-wrap gap-4 text-sm text-gray-600">
        <span class="capitalize">{project.data.category.join(', ')}</span>
        <span>•</span>
        <span>{project.data.year}</span>
        {project.data.duration && (
          <>
            <span>•</span>
            <span>{project.data.duration}</span>
          </>
        )}
        <span>•</span>
        <span class="capitalize">{project.data.status}</span>
      </div>
    </header>

    <!-- Logline -->
    {project.data.logline && (
      <p class="mb-8 text-lg text-gray-700">
        {project.data.logline.en}
        {project.data.logline.cz && <span class="italic"> \ {project.data.logline.cz}</span>}
      </p>
    )}

    <!-- Synopsis (MDX Content) -->
    <section class="mb-12">
      <div class="prose prose-lg max-w-none md:grid md:grid-cols-2 md:gap-8">
        {synopsisEn && (
          <div class="mb-6 md:mb-0">
            <div class="mb-4">
              <span class="inline-flex items-center px-3 py-1 text-sm font-semibold bg-gray-900 text-white rounded-md">EN</span>
            </div>
            <div class="whitespace-pre-wrap">{synopsisEn}</div>
          </div>
        )}
        {synopsisCz && (
          <div>
            <div class="mb-4">
              <span class="inline-flex items-center px-3 py-1 text-sm font-semibold bg-gray-900 text-white rounded-md">CZ</span>
            </div>
            <div class="whitespace-pre-wrap">{synopsisCz}</div>
          </div>
        )}
      </div>
    </section>

    <!-- Credits -->
    <section class="mb-12">
      <h2 class="mb-4 font-serif text-2xl">Credits</h2>
      <dl class="space-y-1 md:grid md:grid-cols-2 md:gap-x-8 md:gap-y-1">
        {project.data.credits.map(credit => (
          <div>
            <dt class="inline font-medium">{credit.role}:</dt>
            <dd class="inline ml-2">{credit.name}</dd>
          </div>
        ))}
      </dl>
    </section>

    <!-- Support -->
    {project.data.support && project.data.support.length > 0 && (
      <section class="mb-12">
        <h2 class="mb-4 font-serif text-2xl">Support</h2>
        <ul class="list-disc list-inside space-y-1 text-gray-700">
          {project.data.support.map(org => (
            <li>{org}</li>
          ))}
        </ul>
      </section>
    )}

    <!-- Development & Pitching -->
    {project.data.pitching && project.data.pitching.length > 0 && (
      <section class="mb-12">
        <h2 class="mb-4 font-serif text-2xl">Development & Pitching</h2>
        <ul class="space-y-1 text-gray-700">
          {project.data.pitching.map(event => (
            <li>
              <span>{event.name}</span>
              {event.year && <span class="text-gray-500"> ({event.year})</span>}
              {event.award && <span class="italic"> – {event.award}</span>}
            </li>
          ))}
        </ul>
      </section>
    )}

    <!-- Official Selection -->
    {project.data.festivals && project.data.festivals.length > 0 && (
      <section class="mb-12">
        <h2 class="mb-4 font-serif text-2xl">Official Selection</h2>
        <ul class="space-y-1 text-gray-700">
          {project.data.festivals.map(festival => (
            <li>
              <span>{festival.name}</span>
              {festival.year && <span class="text-gray-500"> ({festival.year})</span>}
              {festival.award && <span class="italic"> – {festival.award}</span>}
            </li>
          ))}
        </ul>
      </section>
    )}

    <!-- Links -->
    {project.data.links && (project.data.links.instagram || project.data.links.facebook || project.data.links.website) && (
      <section class="mb-12">
        <h2 class="mb-4 font-serif text-2xl">Links</h2>
        <div class="flex items-center gap-4">
          {project.data.links.instagram && (
            <a
              href={project.data.links.instagram}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-700 hover:text-gray-900 transition-colors"
              aria-label="Instagram"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          )}
          {project.data.links.facebook && (
            <a
              href={project.data.links.facebook}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-700 hover:text-gray-900 transition-colors"
              aria-label="Facebook"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          )}
          {project.data.links.website && (
            <a
              href={project.data.links.website}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-700 hover:text-gray-900 transition-colors underline"
            >
              {project.data.links.websiteText || project.data.links.website.replace(/^https?:\/\//, '').replace(/\/$/, '')}
            </a>
          )}
        </div>
      </section>
    )}

    <!-- Video -->
    {project.data.video && (
      <div class="mb-12">
        {project.data.video.provider === 'youtube' && project.data.video.id && (
          <div class="aspect-video">
            <iframe
              width="100%"
              height="100%"
              src={`https://www.youtube.com/embed/${project.data.video.id}`}
              title="Video player"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
              class="border-0"
            ></iframe>
          </div>
        )}
        {project.data.video.provider === 'vimeo' && project.data.video.id && (
          <div class="aspect-video">
            <iframe
              src={`https://player.vimeo.com/video/${project.data.video.id}`}
              width="100%"
              height="100%"
              allow="autoplay; fullscreen; picture-in-picture"
              allowfullscreen
              class="border-0"
            ></iframe>
          </div>
        )}
        {project.data.video.provider === 'direct' && project.data.video.url && (
          <video controls class="w-full">
            <source src={project.data.video.url} type="video/mp4" />
          </video>
        )}
      </div>
    )}

    <!-- Stills Gallery -->
    {stills && stills.length > 0 && (
      <section class="mb-12">
        <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
          {stills.map((still, index) => (
            <button
              type="button"
              data-gallery-index={index}
              class="aspect-video w-full overflow-hidden md:cursor-pointer group"
            >
              <Image
                src={still.image}
                alt={still.alt}
                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                widths={[400, 600, 800]}
                sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
              />
            </button>
          ))}
        </div>
      </section>
    )}

    <!-- Gallery Modal -->
    <div id="gallery-modal" class="hidden fixed inset-0 z-50 bg-black bg-opacity-95">
      <button
        id="close-gallery"
        class="absolute top-4 right-4 text-white text-4xl hover:text-gray-300 z-10"
        aria-label="Close"
      >
        ×
      </button>
      
      <button
        id="prev-image"
        class="hidden md:block absolute left-4 top-1/2 -translate-y-1/2 text-white text-6xl hover:text-gray-300"
        aria-label="Previous"
      >
        ‹
      </button>
      
      <button
        id="next-image"
        class="hidden md:block absolute right-4 top-1/2 -translate-y-1/2 text-white text-6xl hover:text-gray-300"
        aria-label="Next"
      >
        ›
      </button>
      
      <div class="w-full h-full flex items-center justify-center p-4">
        <img
          id="gallery-image"
          src=""
          alt=""
          class="max-w-full max-h-full object-contain"
        />
      </div>
      
      <div id="gallery-counter" class="absolute bottom-4 left-1/2 -translate-x-1/2 text-white text-lg">
      </div>
    </div>

    <script is:inline define:vars={{ stills }}>
      // @ts-nocheck
      const modal = document.getElementById('gallery-modal');
      const galleryImage = document.getElementById('gallery-image');
      const galleryCounter = document.getElementById('gallery-counter');
      const closeBtn = document.getElementById('close-gallery');
      const prevBtn = document.getElementById('prev-image');
      const nextBtn = document.getElementById('next-image');
      const galleryButtons = document.querySelectorAll('[data-gallery-index]');
      
      let currentIndex = 0;
      
      function showImage(index) {
        if (!stills || stills.length === 0) return;
        
        currentIndex = (index + stills.length) % stills.length;
        const still = stills[currentIndex];
        
        if (still && still.image && still.image.src) {
          galleryImage.src = still.image.src;
          galleryImage.alt = still.alt || '';
          galleryCounter.textContent = `${currentIndex + 1} / ${stills.length}`;
        }
      }
      
      galleryButtons.forEach(button => {
        button.addEventListener('click', () => {
          // Не открываем галерею на мобильных (ширина < 768px)
          if (window.innerWidth < 768) return;
          
          const index = parseInt(button.getAttribute('data-gallery-index'));
          modal.classList.remove('hidden');
          showImage(index);
        });
      });
      
      closeBtn.addEventListener('click', () => {
        modal.classList.add('hidden');
      });
      
      prevBtn.addEventListener('click', () => {
        showImage(currentIndex - 1);
      });
      
      nextBtn.addEventListener('click', () => {
        showImage(currentIndex + 1);
      });
      
      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          modal.classList.add('hidden');
        }
      });
      
      document.addEventListener('keydown', (e) => {
        if (!modal.classList.contains('hidden')) {
          if (e.key === 'Escape') {
            modal.classList.add('hidden');
          } else if (e.key === 'ArrowLeft') {
            showImage(currentIndex - 1);
          } else if (e.key === 'ArrowRight') {
            showImage(currentIndex + 1);
          }
        }
      });
    </script>

    <!-- Navigation -->
    <nav class="mt-12 flex justify-between border-t border-gray-200 pt-8">
      <div>
        {prevProject && (
          <a href={`${base}/${prevProject.id.replace('/index', '')}`.replace(/\/+/g, '/')} class="group flex items-center gap-2 hover:text-gray-600">
            <span class="text-2xl">←</span>
            <div>
              <div class="text-sm text-gray-500">Previous</div>
              <div class="group-hover:underline">{prevProject.data.title.en}</div>
            </div>
          </a>
        )}
      </div>
      <div class="text-right">
        {nextProject && (
          <a href={`${base}/${nextProject.id.replace('/index', '')}`.replace(/\/+/g, '/')} class="group flex items-center gap-2 hover:text-gray-600">
            <div>
              <div class="text-sm text-gray-500">Next</div>
              <div class="group-hover:underline">{nextProject.data.title.en}</div>
            </div>
            <span class="text-2xl">→</span>
          </a>
        )}
      </div>
    </nav>
  </article>
</Layout>
